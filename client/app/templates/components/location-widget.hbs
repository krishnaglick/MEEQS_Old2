
<div class="image">
    <img src="{{location.photo}}">
</div>
<div class="content">
    <div class="header">{{location.restaurant.name}}</div>
    <div class="meta">
        <button class='ui button' href='{{location.directionsUrl}}'><i class='map icon'></i></button>
    </div>
    <div class="description">
        <p>{{location.restaurant.description}}</p>
    </div>
    <div class="extra">
        {{tag-list-widget tags=location.tags}}
    </div>
</div>
