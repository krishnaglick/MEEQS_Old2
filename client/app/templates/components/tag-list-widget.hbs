
{{#each tags as |tag|}}
    {{#ui/ui-label}}
        {{tag.name}}
        {{#if removeTag}}
            <i class="delete icon" {{action 'removeTag' tag.tagID on='click'}}></i>
        {{/if}}
    {{/ui/ui-label}}
{{/each}}
{{#if addTag}}
    {{#ui/ui-label action='addTag'}}
        <i class="add icon"></i>
    {{/ui/ui-label}}
{{/if}}
