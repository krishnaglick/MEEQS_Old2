    {{/ui-field}}
    {{#ui-field label='Cost Efficiency'}}
        {{ui-rating value=rating.costEfficiency enabled=false}}
    {{/ui-field}}
    {{#ui-field label='Product Quality'}}
        {{ui-rating value=rating.productQuality enabled=false}}
