
{{#if editing}}
    {{#ui/ui-form action='createTag' submitLabel='Add' cancelLabel='Cancel'}}
        {{ui/ui-field type='dropdown' options=categoryOptions value=newTag.category label='Type'}}
        {{ui/ui-field type='text' value=newTag.name label='Password'}}
    {{/ui/ui-form}}
{{else}}
    {{#ui/ui-label action='addTag'}}
        <i class="add icon"></i>
    {{/ui/ui-label}}
{{/if}}
