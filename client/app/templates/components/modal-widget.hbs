
<i class="times icon" {{action 'cancel'}}></i>
<div class="header">
    {{modalLabel}}
</div>
<div class="content">
    {{yield}}
</div>
<div class="actions">
    {{#if cancelLabel}}
        <div class="ui black button" {{action 'cancel'}}>{{cancelLabel}}</div>
    {{/if}}
    {{#if okLabel}}
        <div class="ui right labeled icon button" {{action 'ok'}}>{{okLabel}}<i class="checkmark icon"></i></div>
    {{/if}}
</div>
